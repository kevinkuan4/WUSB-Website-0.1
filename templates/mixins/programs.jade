mixin djs()
	.grid(data-masonry='{"itemSelector": ".grid-item"}' id="dj-grid")
		//- Need an array of DJs to filter out duplicates
		- var arrayOfDJs = []
		for program in programs.results
			for dj in program.djs
				//- If DJ exists, don't add DJ to page
				if !_.contains(arrayOfDJs, dj)
					- arrayOfDJs.push(dj)
					.grid-item
						a(href='/dj/' + dj.slug)
							.card.card-content
								.card-body
									h4
										!=dj.slug
									div.dj-image
										img(class="profile-image-dj-page" src=dj.profileImage.exists ? dj.profileImage.href : '/images/alien.svg')
	+pagination(programs)


mixin dj()
	- var arrayOfPlaylists = []
	h2=dj.slug
	div.dj-image
		+user-picture-with-name(dj)
	hr
	h3 Programs
	ul
		for program in programs
			a(href='/program/' + program.slug)
				h5=program.title
			if (program.playlists.length > 0)
				for playlist in program.playlists
					- arrayOfPlaylists.push(playlist)
	hr
	h3 Playlists
	ul
		for playlist in arrayOfPlaylists
			li
				a(href='/playlist/' + playlist.id)=playlist.date.toLocaleDateString()
	hr
	h3 Description
	p=dj.description
